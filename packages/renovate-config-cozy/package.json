{
  "name": "renovate-config-cozy",
  "version": "0.4.0",
  "description": "Renovate config for Cozy (Cozy Cloud)",
  "renovate-config": {
    "default": {
      "extends": [
        "config:base"
      ],
      "rangeStrategy": "pin",
      "packageRules": [
        {
          "excludePackageNames": [
            "^cozy-"
          ],
          "extends": [
            "schedule:nonOfficeHours"
          ]
        },
        {
          "packagePatterns": [
            "^cozy-"
          ],
          "minor": {
            "automerge": true
          },
          "patch": {
            "automerge": true
          },
          "pin": {
            "automerge": true
          },
          "lockFileMaintenance": {
            "automerge": true
          }
        }
      ],
      "timezone": "Europe/Paris",
      "updateNotScheduled": false
    }
  },
  "license": "MIT"
}
